<div class="container">
  <h1>My Task</h1>
   <h2><%= @task.title %></h2> 
   <p><%= @task.details %></p>
  
  <% if @task.completed %>
     <p><input type="checkbox" checked disabled> This task is completed</p>
     <% else %>
     <p><input type="checkbox" disabled> This task is not completed yet</p>
  <% end %> 
  
   <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-success" %>
   <%= link_to 'Back', tasks_path, class: "btn btn-primary" %>
</div>
